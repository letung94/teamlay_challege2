<div class="tab-pane fade" id="education">
    <h4> Education</h4>
    <hr/>  
    <form class="form-horizontal" id="education_form" >
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Institute</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input type="text" placeholder="Enter your institute" name="institute" class="form-control"> 
            </div>    
        </div>
        <!-Designation->
        <div class="form-group row">
            <label class="col-sm-3 col-lg-2 control-label">Degree</label>
            <div class="col-sm-9 col-lg-10 controls">
                <input type="text" placeholder="Enter your degree" name="degree" class="form-control" >
            </div>    
        </div>
        <!-Date(s)->
        <div class="form-group">
                <label class="col-sm-3 col-lg-2 control-label">Date(s)</label>
                    <div class="col-sm-5 col-lg-10 controls">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            <input type="text" placeholder="From date To date" class="form-control date-range" name="date" readonly="readonly"/>                            
                        </div>
                    </div>
        </div>
        <!-Details-> 
        <div class="form-group">
                <label class="col-sm-3 col-lg-2 control-label">Details</label>
                <div class="col-sm-9 col-lg-10 controls">
                    <textarea class="form-control col-md-12 wysihtml5" rows="6" name="detail"></textarea>
                </div>
        </div>
        <div class="form-group row">
                <label class="col-sm-3 col-lg-2 control-label">&nbsp;</label>
                <div class="col-sm-9 col-lg-10 controls">
                    <button type="button" id="btnAddListEdu"  class="btn btn-success"><i class="fa fa-plus">&nbsp;Add To List</i></button>
                    <button type="button" id="btnSaveEdu" class="btn btn-success" style="display:none"><i class="fa fa-save">&nbsp;Save</i></button>
                </div> 
                        
        </div>
        
        <div class="form-group row">
            <div class="box">
                <div class="box-title">
                <h4> List of Education</h4>
                </div>
                <div class="box-content">
                    <div class="table-big">
                        <table class="table table-striped table-hover fill-head" id="list-education">
                        <thead>
                            <tr style="font-size: 13px">
                            <th>Institute</th>
                            <th>Degree</th>
                            <th>Date(s)</th>
                            <th>Action</th>
                            </tr>
                        </thead>
                            <tbody>  
                       
                            </tbody>
                            </table>
                    </div>
                </div>         
                    
            </div>            
        </div>    
    </form>        
</div>


<script type="text/javascript" src="js/education.js"></script>