<body class="login-page">

    <!-- BEGIN Main Content -->

    <div class="login-wrapper">
        <!-- BEGIN Register Form -->

        <form id="form-register" action="register" method="post">
            <h3>Register</h3>
            <hr />

            <div class="form-group">
                <div class="controls">
                    <input type="text" id="firstname" name="firstname" placeholder="First name" class="form-control"  />
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <input type="text" id="lastname" name="lastname" placeholder="Last name" class="form-control"  />
                </div>
            </div>

            <div class="form-group">
                <div class="controls">
                    <input type="text" id="username" name="username" placeholder="Username" class="form-control"  />
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <input type="password" id="password" name="password" placeholder="Password" class="form-control"  />
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <input type="password" id="repeat_password" name="repeat_password" placeholder="Repeat Password" class="form-control"  />
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <input type="email" id="email" name="email" placeholder="Email" class="form-control"  />
                </div>
            </div>

            <div class="form-group">
                <div class="controls">
                    <label class="checkbox">
                        <input type="checkbox" id="accept" name="accept" value="accept" /> I accept the <a href="#">user aggrement</a>
                    </label>
                    <label id="accept_error-message" class="text-danger" style="display: none"></label>
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <button type="submit" id="submit" class="btn btn-primary form-control">Register</button>
                </div>
            </div>
            <hr />
            <p class="clearfix">
                <a href="/login" class="goto-login pull-left">‚Üê Back to login form</a>
            </p>
        </form>

        <!-- END Register Form -->
    </div>
    <!-- END Main Content -->

