    <script type="text/javascript">
    function goToForm(form)
    {
        $('.register-wrapper > form:visible').fadeOut(200, function(){
            $('#form-' + form).fadeIn(200);
        });
    }
    $(function() {
        $('.goto-login').click(function(){
            goToForm('login');
        });
        $('.goto-forgot').click(function(){
            goToForm('forgot');
        });
        $('.goto-register').click(function(){
            goToForm('register');
        });
    });
    </script>


