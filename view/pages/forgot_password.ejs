<body class="login-page">

<!-- BEGIN Main Content -->

    <div class="login-wrapper">
    <!-- BEGIN Forgot Password Form -->
    
    <form id="form-forgot-password" action="forgot" method="post">
    <h3>Get back your password</h3>
    <hr/>  
    <div class="form-group">
    <div class="controls">
    <input name="email" id="email" type="email" placeholder="Email" class="form-control" />
    </div>
    </div>
    
    <% if(typeof(errorMessage) !== 'undefined') {%>
            <% if(errorMessage.length>0) {%>
            <div class="alert alert-danger"><%= errorMessage %></div>
         <% } %>
         <% } %>
         
         <% if(typeof(successMessage) !== 'undefined') {%>
            <% if(successMessage.length>0) {%>
            <div class="alert alert-success"><%= successMessage %></div>
         <% } %>
         <% } %>

    <div class="form-group">
    <div class="controls">
    <button type="submit" id="submit" class="btn btn-primary form-control">Recover</button>
    </div>
    </div>
    <hr/>
    <p class="clearfix">
    <a href="/login" class="goto-login pull-left">‚Üê Back to login form</a>
    </p>
    </form>
    
    <!-- END Forgot Password Form -->
    </div>
    <!-- END Main Content -->

</body>

